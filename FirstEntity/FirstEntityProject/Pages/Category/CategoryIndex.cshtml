@page
@model FirstEntityProject.Pages.Category.CategoryIndexModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>لیست گروه محصولات</title>
</head>
<body>
    <h1 align="center"style="color:royalblue">لیست گروه محصولات</h1>
    <p align="center"><a asp-page="/Category/CreateCategory">ایجاد گروه محصول جدید</a></p>
    <table align="center">
        <thead>
            <tr>
                <th>آیدی</th>
                <th>نام</th>
                <th>تاریخ ایجاد</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.productcategories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreationDate</td>
                    <td>
                        <a asp-page="/Category/Edit" asp-route-id="@item.Id">ویرایش</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>